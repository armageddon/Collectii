<html>
<head>
  <title>Photos: <%= controller.action_name %></title>
  <%= stylesheet_link_tag 'scaffold' %>
<%= javascript_include_tag :defaults %> 
<%= stylesheet_link_tag 'lightbox' %>
<%= javascript_include_tag :defaults %>
<%= javascript_include_tag 'lightbox' %>
<%= javascript_include_tag 'Tooltip' %>
<script type="text/javascript">
     Tooltip.autoHideTimeout = 30; // time in seconds
Tooltip.showEvent = new Array("click", "focus", "mouseover");
// http://tooltip.crtx.org/index.php?page=Advanced
Tooltip.hideEvent = new Array("blur", "click");
  Tooltip.autoHideClick = true;
Tooltip.click = true;
</script>
<body>


 <%= render :partial => 'plugins/username' %>
 <%= render :partial => 'plugins/menu' %><br>
<% if flash[:notice] -%> <br>
<div id="notice"><%= flash[:notice] %></div> <br>
<% end -%>
<%= @content_for_layout %>
 <%= render :partial => '/plugins/footer' %>


</body>
</html>
